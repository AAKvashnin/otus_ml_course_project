name: ComplaintClassifier

conda_env: conda.yaml

entry_points:
  # train Spark model
  main:
    parameters:
       max_iter: {type: int, default: 10}
       reg_param: {type: float, default: 0.3}
    command: "python mlflow/train.py  --max-iter {max_iter} --reg-param {reg_param}"
  register:
    command: "python mlflow/register.py"
  unregister:
    command: "python mlflow/unregister.py"
  validate:
    command: "python mlflow/validate.py"
  predict:
    parameters:
       test_data: path
       result_data: path
    command: "python mlflow/predict.py --test-data {test_data} --result_data {result_data}"
